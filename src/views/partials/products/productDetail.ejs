<article>
    <div class="caja-foto">
        <p class="tituloDetalle"><%= p.nombre %></p>
        <img class="foto" src="/images/productos/<%= p.imagen %>" alt="">
    </div>
    <div class="caja1">
        <div class="pago">
            <p class="precio">$ <%= p.precio %></p>
            <p class="descuento"><%= p.descuento %> % OFF</p>
            <p class="pago">Ver medios de pago</p>
        </div>
        <div class="valoracion">
            <i class="fas fa-star"></i>
            <p>4.8</p>
            <p class="opiniones">540 opiniones</p>
        </div>
    </div>
    <div class="compra">
        <a href="/products/cart/"><button>Agregar a mi previa</button></a>
    </div>
    
    <div class="detalleProducto">
        <p><%= p.descripcion %></p>
    </div>
    
    <% if (locals.userLogged && locals.userLogged.admin == 1) { %>
        <div class="ingresos">
            <a href="/products/<%= p.id_producto %>/edit" class="ingresar" >Editar</a>
            <form action="/products/<%= p.id_producto %>/delete" method="POST">
                <button type="submit" class="registrate">Eliminar</button>
            </form> 
        </div>
    <% } %>

</article>
