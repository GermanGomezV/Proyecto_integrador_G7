<article>
    <div class="caja-foto">
        <p class="tituloDetalle"><%= producto.nombre %></p>
        <img class="foto" src="/images/productos/<%= producto.imagen %>" alt="">
    </div>
    <div class="caja1">
        <div class="pago">
            <p class="precio">$ <%= producto.precio %></p>
            <p class="descuento"><%= producto.descuento %> % OFF</p>
            <p class="pago">Ver medios de pago</p>
        </div>
        <div class="valoracion">
            <i class="fas fa-star"></i>
            <p>4.8</p>
            <p class="opiniones">540 opiniones</p>
        </div>
    </div>
    <div class="compra">
        <a href="/products/cart/"><button>Agregar a mi previa</button></a>
    </div>
    
    <div class="detalleProducto">
        <p><%= producto.descripcion %></p>
    </div>
</article>
