<!DOCTYPE html>
<html lang="en">
    <%- include('../partials/head') %>
<body>
    <%- include('../partials/header') %>
    <main>
        <form action="" method="POST">
            <div class=ingresoManual>
                <p class="ingresa-cuenta">Creá tu cuenta y empezá la previa</p><br>
                <label for="nombre">Nombre</label>
                <input class="nombre" type="text" placeholder="Ingresá tu nombre" name="nombre" value="<%= locals.oldData ? oldData.nombre : null %>">
                <% if (locals.errors && errors.nombre) { %>
                    <div class="notificacion_error">
                        <%= errors.nombre.msg %> 
                    </div>
                <% } %>
                <label for="apellido" >Apellido</label>
                <input class="apellido" type="text" placeholder="Ingresá tu apellido" name="apellido" value="<%= locals.oldData ? oldData.apellido : null %>">
                <% if (locals.errors && errors.apellido) { %>
                    <div class="notificacion_error">
                        <%= errors.apellido.msg %> 
                    </div>
                <% } %>
                <label for="email" >Correo</label>
                <input class="email" type="email" placeholder="Ingresá tu e-mail" name="email" value="<%= locals.oldData ? oldData.email : null %>">
                <% if (locals.errors && errors.email) { %>
                    <div class="notificacion_error">
                        <%= errors.email.msg %> 
                    </div>
                <% } %>
                <label for="password">Contraseña</label>
                <input class="password" type="password" placeholder="Ingresá una contraseña" name="password" value="<%= locals.oldData ? oldData.password : null %>">
                <% if (locals.errors && errors.password) { %>
                    <div class="notificacion_error">
                        <%= errors.password.msg %> 
                    </div>
                <% } %>
                <input class="password2" type="password" placeholder="Repetí la contraseña" name="password2" value="<%= locals.oldData ? oldData.password2 : null %>">
                <% if (locals.errors && errors.password2) { %>
                    <div class="notificacion_error">
                        <%= errors.password2.msg %> 
                    </div>
                <% } %>
            </div>
            <div class="cajaIngreso">
                <label for="recordarUsuario"><input type="checkbox" name="recordarUsuario"> Aceptar términos y condiciones</label>
                <p>Términos y condiciones</p>
            </div>
            <div class="cajaIngreso">
                <% if (locals.errors && errors.recordarUsuario) { %>
                    <div class="notificacion_error">
                        <%= errors.recordarUsuario.msg %> 
                    </div>
                <% } %>
            </div>
            <div class="ingresos">
                <button type="submit" class="ingresar" >Registrate</button>
                <a href="/users/login" class="registrate" >Logueate</a>
                <div class="redes">
                    <i class="fab fa-facebook-f"></i>
                    <i class="fab fa-google"></i>
                </div>
            </div>        
        </form>
    </main>
    <%- include('../partials/footer') %>
</body>
</html>