<!DOCTYPE html>
<html lang="en">
    <%- include('../partials/head') %>
    <script type="text/javascript" src="/js/form_validations/validationFrontLogged.js"></script>
<body>
    <%- include('../partials/header') %>
    <main>
        <form action="" method="POST" class="formLogged">
            <div class=ingresoManual>
                <p class="ingresa-cuenta">Ingresá con tu cuenta</p><br>
                <label for="email">Usuario</label>
                <input class="email" type="text" placeholder="Ingresá tu usuario o correo electrónico" name="email" value="<%= locals.oldData ? oldData.email : null %>">
                <div class="notificacion_error email_errors"></div>
                <% if (locals.errors && errors.email) { %>
                    <div class="notificacion_error">
                        <%= errors.email.msg %> 
                    </div>
                <% } %>
                <label for="password">Contraseña</label>
                <input class="password" type="password" placeholder="Ingresá tu contraseña" name="password">
                <div class="notificacion_error password_errors"></div>
                <% if (locals.errors && errors.password) { %>
                    <div class="notificacion_error">
                        <%= errors.password.msg %> 
                    </div>
                <% } %>
            </div>
            <div class="cajaIngreso">
                <label for="recordarUsuario"><input type="checkbox" name="recordarUsuario"> Recordar usuario</label>
                <p>¿Olvidaste tu contraseña?</p>
            </div>
            <div class="ingresos">
                <button type="submit" class="ingresar" >Ingresá</button>
                <a href="/users/register" class="registrate" >Registrate</a>
                <div class="redes">
                    <i class="fab fa-facebook-f"></i>
                    <i class="fab fa-google"></i>
                </div>
            </div>        
        </form>
    </main>
    <%- include('../partials/footer') %>
</body>
</html>